<UserControl x:Name="userControl" x:Class="TagBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FpWPFControls"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="20" Tag="A">
    <Grid>
        <Label Content="{Binding Tag, ElementName=userControl}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="0" 
               BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}" BorderThickness="1" MouseUp="ChangeTag"
               MouseWheel="ChangeTag2" FontSize="{Binding FontSize, ElementName=userControl}" FontFamily="{Binding FontFamily, ElementName=userControl}"
               FontWeight="{Binding FontWeight, ElementName=userControl}" FontStyle="{Binding FontStyle, ElementName=userControl}"/>
    </Grid>
</UserControl>
